<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_titleheight"
        android:background="@color/logo_color"
        android:paddingTop="@dimen/statusbar_pading_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我"
            android:textColor="@color/white"
            android:textSize="@dimen/tool_titletextsize"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="设置"
            android:id="@+id/text_set"
            android:textColor="@color/white"
            android:textSize="@dimen/tool_hinttextsize"
        />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/tool_bggraycolor"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/packet_photo"
                />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>